<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.medical_record.activities.PodaciZakazanogPregleda">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="StomatoloÅ¡ka ordinacija"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/logo"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/bg_list"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klinika"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/klinika"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Klinika"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usluga"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/procedura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Usluga"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specijalista"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/specijalista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Specijalista"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datum"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"
                        android:id="@+id/textView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/datum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datum"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vreme"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/vreme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vreme"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reminder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/main"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/bg_list"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/reminderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zakazali ste svoj pregled"
                        android:textColor="#000000"
                        android:textSize="@dimen/text"
                        android:textAllCaps="false"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="opcija1"
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reminder"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="127dp"
                android:background="@drawable/green"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingRight="74dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_horizontal"
                        android:text="Otvorite karton"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text"
                        android:textStyle="normal|bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="opcija2"
                android:id="@+id/okay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reminder"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="127dp"
                android:background="@drawable/blue"
                android:elevation="6dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:gravity="center_horizontal"
                        android:text="Zakazite novi pregled"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text"
                        android:textStyle="normal|bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>