<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.medical_record.activities.ZakazanPregledActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Stomatološka ordinacija"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/logo"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <!--            <TextView-->
            <!--                android:text="Your Dental Appointment Assistant"-->
            <!--                android:layout_width="380dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="66dp"-->
            <!--                android:id="@+id/motto"-->
            <!--                android:textColor="#ffffff"-->
            <!--                android:textAlignment="center"-->
            <!--                android:textStyle="normal|bold"-->
            <!--                android:textSize="15dp"-->
            <!--                android:gravity="center_horizontal" />-->

            <TextView
                android:text="Da li su Vaši podaci tačni?"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textColor="#ffffff"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="122dp"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal" />


            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="190dp"
                android:background="@drawable/bg_list"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ime:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/ime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ime i prezime"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email adresa"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefon"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/telefon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Broj telefona"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privatno osiguranje "
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/osiguranje"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Da/Ne"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c0c0c0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klinika:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/klinika"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Klinika"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usluga:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/usluga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Usluga"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specijalista:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/specijalista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Specijalista"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Datum:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"
                        android:id="@+id/textView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/datum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Datum"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginTop="-21dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vreme:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/vreme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vreme"
                            android:textSize="@dimen/text"
                            android:textColor="#000000"
                            android:layout_marginTop="1dp"
                            android:textAlignment="textEnd"
                            android:gravity="end" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="modify"
                android:id="@+id/modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/blue"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingRight="74dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="Ulogujte se"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text"
                        android:textStyle="normal|bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="book"
                android:id="@+id/book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/green"
                android:elevation="6dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rezervisati"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text"
                        android:textAllCaps="true"
                        android:textStyle="normal|bold"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>